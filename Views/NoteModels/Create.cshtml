@model Notes_Website.Models.NoteModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Make a Note</h4>
<hr />

<form asp-action="Create" class="row g-3">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="mb-3 col-md-12">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 col-md-12">
        <label asp-for="Note" class="control-label"></label>
        <textarea asp-for="Note" class="form-control" rows=3></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="NoteTypeId" class="control-label"></label>
        <select asp-for="NoteTypeId" class="form-select" aria-label="Default select example" >

                @foreach(var type in ViewBag.noteTypes)
                {
                    <option value="@type.Id">@type.Type</option>   
                }            
        
        </select>
    <span asp-validation-for="NoteTypeId" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Added" class="control-label"></label>
        <input asp-for="Added" class="form-control" />
        <span asp-validation-for="Added" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Note_Part" class="control-label"></label>
        <input asp-for="Note_Part" class="form-control" />
        <span asp-validation-for="Note_Part" class="text-danger"></span>
    </div>
    <div class="d-grid gap-2 justify-content-center">
        <button type="submit" value="Create" class="btn btn-success btn-lg">
            <p>Create
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                    <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z" />
                    <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
                </svg>
            </p>
        </button>
    </div>
</form>
    

<div>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List 
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
